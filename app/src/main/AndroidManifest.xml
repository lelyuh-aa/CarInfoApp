<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.lelyuh.testcarapp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".CarApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_default_car"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_default_car_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CarModels">

        <activity
            android:name=".presentation.activity.SplashActivity"
            android:theme="@style/Theme.CarSplash"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".presentation.activity.ManufacturerListActivity">
        </activity>
        <activity
            android:name=".presentation.activity.CarModelsListActivity">
        </activity>
        <activity
            android:name=".presentation.activity.CarBuildDatesListActivity">
        </activity>
        <activity
            android:name=".presentation.activity.CarSummaryActivity">
        </activity>
    </application>

</manifest>